{
  "title": "Data Archive Book",
  "description": "The Data Archive in book form",
  "author": "Rhys Wells",
  "published": "20/04/2025",
  "copyright": "Rhys Wells",
  "honkit": ">=3.0.0",
  "root": "./",
  "plugins": [
    "katex",
    "include-codeblock",
    "highlight",
    "lunr",
    "theme-default",
    "search"
  ],
  "pluginsConfig": {
    "search": {
      "indexContents": true,   // Whether to index content
      "indexHeadings": true    // Whether to index headings
    },
    "katex": {
      "delimiters": [
        { "left": "$$", "right": "$$", "display": true },
        { "left": "$", "right": "$", "display": false }
      ]
    },
    "include-codeblock": {
      "fixlang": true,
      "unindent": true
    },
    "lunr": {
      "languages": ["en"],  
      "indexContents": true, 
      "indexHeadings": true   
    }
  },
  "styles": {
    "website": "styles.css"
  },
  "assets": {
    "copy": [
      "images/**/*"
    ]
  }
}
