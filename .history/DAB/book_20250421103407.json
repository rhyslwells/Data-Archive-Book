{
  "title": "Data Archive Book",
  "description": "The Data Archive in book form",
  "author": "Rhys Wells",
  "published": "20/04/2025",
  "copyright": "Rhys Wells",
  "honkit": ">=3.0.0",
  "root": "./",
  "plugins": ["katex", "include-codeblock", "highlight", "lunr", "internal-links","fontsettings", "theme-default"],
  "pluginsConfig": {
    "internal-links": {
      "prefix": "/"
    },
    "katex": {
      "delimiters": [
        { "left": "$$", "right": "$$", "display": true },
        { "left": "$", "right": "$", "display": false }
      ]
    },
    "include-codeblock": {
      "fixlang": true,
      "unindent": true
    }
  },
  "styles": {
    "website": "./styles.css"
  }
}
